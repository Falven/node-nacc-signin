extends ../layout/layout.jade

include ../components/name-submit-list.pug

block header
  header
    h1.h1="Student # " + studentID
      unless ERROR
        h3.h3 Please select your #{peerType}.
      else
        h3.h3.error-text Invalid #{peerType} provided. Please try again.
block section
  section#peers
    .wrapper
      +name-submit-list("/reason/peers/confirm", "post", peers, "peer")